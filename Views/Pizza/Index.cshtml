@{
    Layout = "_Layout";
}

@model List<Pizza>

@if (Model.Count() == 0)
{
    <h3>Non ci sono pizze da mostrare</h3>

}
else
{
    <div class="d-flex align-items-center justify-content-around gap-4 sfondo-hero">
        <img width="250" src="~/Img/trasporto-pizza.jpg" />
        <div class="text-center text-success">
            <p class="fs-2"><strong>Scegli la tua pizza</strong></p>
            <p class="fs-2"><strong>A consegnarla ci pensiamo noi</strong></p>
        </div>
        <img src="~/Img/pizza-a-casa.jpg" />
    </div>
    <div class="container">
        <div class="d-flex align-items-center justify-content-between gap-5 my-5">
            <div class="d-flex  align-items-center gap-5">
                <h1 class="my-5 py-5 text-success fs-1">Menù pizze</h1>
                <img width="100" height="100" src="~/Img/pizza-menu.jpg" />
            </div>
            <div>
                @if (User.IsInRole("ADMIN"))
                {
                    <a class="btn btn-success"
                       href="@Url.Action("Create", "Pizza")">
                        Crea nuova pizza
                    </a>
                }
            </div>
        </div>
        <div class="d-flex flex-wrap gap-4">

            @foreach (Pizza pizza in Model)
            {
                <div class="card" style="width: 18rem;">
                    <img width="200" src="@pizza.Image" class="card-img-top" alt="Foto pizza">
                    <div class="card-body">
                        <h5 class="card-title text-success">@pizza.Nome</h5>
                        <p class="card-text">@pizza.Descrizione</p>
                        <p class="card-text">€ @pizza.Prezzo</p>
                    </div>
                    <div class="text-center mb-3 d-flex justify-content-center gap-2">
                        <a class="btn btn-outline-success btn-sm" href="@Url.Action("DettaglioPizza", "Pizza", new { id = pizza.Id })">Info pizza</a>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <td>
                                <a href="@Url.Action("Update", "Pizza", new { id = pizza.Id})">
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">Modifica</button>
                                </a>
                            </td>
                            <td>
                                <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        Elimina
                                    </button>
                                </form>
                            </td>
                        }
                    </div>
                </div>
            }
        </div>

    </div>
}

}








